<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Supermoon</title>
    <meta name="description" content="Visualizing live streamed VLF radio data">
    <meta name="author" content="Cory O'Brien">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{#each cssFiles}}
    <link rel="stylesheet" href="{{.}}">
    {{/each}}
    {{#each scripts}}
    <script src="{{.}}"></script>
    {{/each}}
    {{#if prod}}
    <script>
        require.config({
            baseUrl: '/static/app'
        });
    </script>
    {{else}}
    <script>
        require.config({
            baseUrl: '/static/app',
            paths: { 'text': '../lib/text' }
        });
    </script>
    {{/if}}
    <script>
        require(['app'], function (app) {
            window.app = app.run();
        });
    </script>
</head>
<body>
<div id="app-container" class="container">
    <div id="visualization-container" class="container"></div>
    <div id="controls-container" class="floating-box top-left"></div>
    <div id="footer" class="footer floating-box bottom-left">
        <p><a href="https://github.com/prtcl/supermoon">Supermoon</a> by <a href="http://prtcl.cc">Cory O'Brien</a> &copy; 2015</p>
    </div>
</div>
<div id="modal-container" class="container"></div>
</body>
</html>
